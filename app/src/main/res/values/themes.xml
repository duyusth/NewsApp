<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Màu chính và màu phụ cho light mode -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Background, text, button và hint colors cho light mode -->
        <item name="android:windowBackground">@color/backgroundColorLight</item> <!-- Nền cho light mode -->
        <item name="android:textColor">@color/textColorLight</item> <!-- Màu chữ light mode -->
        <item name="android:colorButtonNormal">@color/buttonColorLight</item> <!-- Màu cho button light mode -->
        <item name="android:textColorHint">@color/hintColorLight</item> <!-- Màu hint cho light mode -->
    </style>
</resources>
